#include "comsheader.h"

/**
 *
 */
int landlord(){
	int i;
	/*alt_putstr("\nIn landlord\n");
	for(i=0; i<17; i++)
		alt_printf("mycard%x\t", cch[i]);
	for(i=0; i<54; i++)
		printf("sram: %d", sramread(i));*/

	char opcode;
	int choice;
	while(!isCurrentPlayer()){
		recvchar(&opcode);
		switch(opcode){
		case 5:
				multiplier=1;
				break;
		case 6:
				multiplier=2;
				break;
		case 7:
				multiplier=3;
				break;
		case 8:
				PCS=0x5;
				break;
		case 9:
				PCS=0xA;
				break;
		case 10:
				PCS=0xF;
				break;
		default:
				return -1;
		}
	}
	printf("\n");
	printf("\n");
	printf("\n");
	if((PCS&0x3)==1){
		alt_printf("Hey player #1, choose a score from '1' '2' '3'");
	}
	if((PCS&0x3)==2){
		alt_printf("Hey player #2, choose a score from '1' '2' '3'");
	}
	if((PCS&0x3)==3){
		alt_printf("Hey player #3, choose a score from '1' '2' '3'");
	}
	scanf(" %d", &choice);
	printf("choice is :%x\n",choice);
	if((PCS&0x3) == 1) {
		if(choice==1){
			setmul1();
			usleep(100);
			PCS = PCS | (0x4);
		}
		if(choice==2){
			setmul2();
			usleep(100);
			PCS = PCS | (0x4);
		}
		if(choice==3){
			setmul3();
			usleep(100);
			PCS=0x5; //0101
			PCS1010();
			return 0;
		}
	}
	if((PCS&0x3) ==2) {
		if(choice>multiplier){
			if(choice==2){
				setmul2();
				PCS=0xA;
				PCS1010();
			}
			if(choice==3){
				setmul3();
				PCS=0xA; //1010
				PCS1010();
				return 0;
			}
		}
	}
	if((PCS&0x3) ==3) {
		if(choice>multiplier){
			PCS = 0xF; //1111
			if(choice==3){
				setmul3();
				return 0;
			} else if(choice==2 && multiplier==1) {
				setmul2();
				return 0;
			}
		} else if (multiplier==2){
			PCS=0xA;
			PCS1010();
		} else if (multiplier==1){
			PCS=0x5;
			PCS0101();
		}
	}
	nextPlayer();
	incPCS();
	while(!isCurrentPlayer()){
		recvchar(&opcode);
		switch(opcode){
		case 5:
				multiplier=1;
				break;
		case 6:
				multiplier=2;
				break;
		case 7:
				multiplier=3;
				break;
		case 8:
				PCS=0x5;
				break;
		case 9:
				PCS=0xA;
				break;
		case 10:
				PCS=0xF;
				break;
		default:
				return -1;
		}
	}
	return 0;
}
